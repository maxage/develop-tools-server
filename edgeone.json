{
  "name": "develop-tools-api",
  "buildCommand": "cd ./edge-page && npm ci && npm run build",
  "installCommand": "cd ./edge-page && npm ci",
  "outputDirectory": "./edge-page/dist",
  "nodeVersion": "20.18.0",
  "redirects": [
    {
      "source": "/api/*",
      "destination": "/api/:splat",
      "statusCode": 200
    }
  ],
  "rewrites": [
    {
      "source": "/api/*",
      "destination": "/api/:splat"
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=3600"
        }
      ]
    },
    {
      "source": "/api/*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "caches": [
    {
      "source": "/api/*",
      "cacheTtl": 300
    },
    {
      "source": "/*.js",
      "cacheTtl": 86400
    },
    {
      "source": "/*.css",
      "cacheTtl": 86400
    },
    {
      "source": "/*.png",
      "cacheTtl": 2592000
    },
    {
      "source": "/*.jpg",
      "cacheTtl": 2592000
    },
    {
      "source": "/*.svg",
      "cacheTtl": 2592000
    }
  ]
}
